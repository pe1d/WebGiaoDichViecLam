@{
    ViewData["Title"] = "SignUpUser";
}
<header class="page-header">
    <h2 class="page-title">Đăng ký thông tin ứng viên</h2>
</header>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<div id="primary" class="content-area container" role="main">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <article class="page type-page status-publish hentry">
                <div class="entry-content">
                    <div class="registration-form woocommerce">
                        <form method="post" class="register" enctype="multipart/form-data">
                            <input type="hidden" name="iAccountID" value="@ViewBag.AccountId" />
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_fullname">Họ tên đầy đủ<span class="required">*</span></label>
                                <input type="text" class="woocommerce-Input woocommerce-Input--text input-text"
                                       name="fullname" id="reg_fullname" value="" required />
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_profile_picture">Ảnh đại diện</label>
                                <input type="file" class="woocommerce-Input woocommerce-Input--text input-text"
                                       name="profile_picture" id="reg_profile_picture" accept="image/*" />
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_phone">Số điện thoại</label>
                                <input type="tel" class="woocommerce-Input woocommerce-Input--text input-text"
                                       name="phone" id="reg_phone" value="" required />
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_address">Địa chỉ</label>
                                <input type="text" class="woocommerce-Input woocommerce-Input--text input-text"
                                       name="address" id="reg_address" value="" required />
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_skills">Kỹ năng</label>
                                <textarea class="woocommerce-Input woocommerce-Input--text input-text"
                                          name="skills" id="reg_skills" rows="3"></textarea>
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_experience">Kinh nghiệm</label>
                                <textarea class="woocommerce-Input woocommerce-Input--text input-text"
                                          name="experience" id="reg_experience" rows="3"></textarea>
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_education">Học thức</label>
                                <textarea class="woocommerce-Input woocommerce-Input--text input-text"
                                          name="education" id="reg_education" rows="3"></textarea>
                            </p>
                            <p class="woocommerce-FormRow woocommerce-FormRow--wide form-row form-row-wide">
                                <label for="reg_cv">Hồ sơ ứng viên (CV)</label>
                                <input type="file" class="woocommerce-Input woocommerce-Input--text input-text"
                                       name="cv" id="reg_cv" accept=".pdf,.doc,.docx" />
                            </p>
                            <!-- Spam Trap -->
                            <div style="left: -999em; position: absolute;">
                                <label for="trap">Anti-spam</label><input type="text" name="email_2" id="trap" tabindex="-1" autocomplete="off" />
                            </div>

                            <input type="hidden" value="candidate" name="reg_role" />
                            <div class="woocommerce-privacy-policy-text"></div>
                            <p class="woocomerce-FormRow form-row">
                                <input type="hidden" id="woocommerce-register-nonce" name="woocommerce-register-nonce" value="3e970747be" />
                                <input type="submit" class="woocommerce-Button button" name="register" value="Đăng ký thông tin" />
                            </p>
                        </form>
                    </div>
                </div>
            </article><!-- #post -->
        </div>
    </div>
</div><!-- #primary -->